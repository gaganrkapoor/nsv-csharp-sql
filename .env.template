# Docker Compose Environment Variables Template
# Copy this file to .env.example and then to .env, updating with real values

# SQL Server Configuration
SQL_SA_PASSWORD=YourStrong!Passw0rd

# API Configuration  
ASPNETCORE_ENVIRONMENT=Development
API_PORT=3100

# Web Configuration
WEB_PORT=3000
VITE_API_BASE_URL=http://localhost:3100

# Function Configuration
FUNCTION_PORT=7071

# Storage Configuration  
AZURITE_BLOB_PORT=10000
AZURITE_QUEUE_PORT=10001
AZURITE_TABLE_PORT=10002

# Azure Document Intelligence (Form Recognizer) Configuration
# Get these values from your Azure Portal > Document Intelligence resource > Keys and Endpoint
FORM_RECOGNIZER_ENDPOINT="https://YOUR-RESOURCE-NAME.cognitiveservices.azure.com/"
FORM_RECOGNIZER_KEY="YOUR_API_KEY_HERE"
FORM_RECOGNIZER_MODEL_ID="your-model-id"

# Vector Database Configuration
CHROMA_SERVER_ANONYMIZED_TELEMETRY=FALSE

# AI/LLM Configuration - Regular OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Embedding Model Configuration (optional - uses default if not specified)
EMBEDDING_MODEL=text-embedding-ada-002

# Application Insights (leave empty for containerized setup)
VITE_APPLICATIONINSIGHTS_CONNECTION_STRING=

# Container Names
SQLSERVER_CONTAINER=todo-sqlserver
API_CONTAINER=todo-api
WEB_CONTAINER=todo-web
FUNCTION_CONTAINER=todo-function
AZURITE_CONTAINER=todo-azurite